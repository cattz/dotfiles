[url "git@github.com:"]

	insteadOf = "gh:"
	pushInsteadOf = "github:"
	pushInsteadOf = "git://github.com/"
	
[commit]
	template = /Users/xabier davila/.stCommitMsg
[init]
	defaultBranch = main
